// Detecta si es HLS (m3u8) para usar Video.js; si no, usa iframe.
    function esHLS(url){
      return /m3u8(\b|$)/i.test(url);
    }

    function reproducir(url){
      // Limpia estados
      player.pause();
      player.reset();
      vjsEl.classList.add('hidden');
      ifm.classList.add('hidden');

      if (esHLS(url)) {
        // Player HLS
        player.src({ src: url, type: 'application/x-mpegURL' });
        vjsEl.classList.remove('hidden');
        player.play().catch(()=>{});
      } else {
        // Iframe
        ifm.src = url;
        ifm.classList.remove('hidden');
      }
    }

    // Eventos
    canalSel.addEventListener('change', e => reproducir(e.target.value));
    document.getElementById('recargar').addEventListener('click', () => {
      const url = canalSel.value;
      reproducir(url);
    });

    // Auto play primero
    reproducir(canales[0].url);
